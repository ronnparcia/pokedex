<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pokedex</title>

    <!-- Partial to head.ejs -->
    <%- include('partials/head') %>

    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <div class="container">
        <h1>Pokedex</h1>
        <form action="/search" method="get">
            <input type="text" name="searchQuery" placeholder="Search by name or ID" value="<%= searchQuery %>">
            <button type="submit">Search</button>
        </form>

        <form action="/sort" method="get">
            <select name="sortBy" onchange="this.form.submit()">
            <option value="id" <%= sortBy === 'id' ? 'selected' : '' %>>Sort by ID</option>
            <option value="name" <%= sortBy === 'name' ? 'selected' : '' %>>Sort by Name</option>
            </select>
        </form>

        <div id="pokemon-grid" class="row row-cols-4 g-3">
            <% loadedPokemons.forEach(pokemon => { %>
                <div class="col">
                    <div class="card">
                        <div class="row g-0">
                            <!-- Image -->
                             <div class="card-img-wrapper col-4">
                                <% if (pokemon.imageUrl) { %>
                                    <img src="<%= pokemon.imageUrl %>" alt="<%= pokemon.name %>">
                                <% } %>
                             </div>
                             <!-- Body -->
                              <div class="col-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= pokemon.name; %></h5>
                                    <p class="card-text"><small class="text-body-secondary">ID No. <%= pokemon.id %></small></p>
                                 </div>
                              </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>

        <ul id="pokemon-list">
            <% loadedPokemons.forEach(pokemon => { %>
                <li>
                    <%= pokemon.id %> - <%= pokemon.name %>
                </li>
            <% }); %>
        </ul>
        
        <button id="load-more">Load More</button>
    </div>
    
    <!-- Client-side Script -->
    <script src="/js/index.js"></script>
</body>
</html>